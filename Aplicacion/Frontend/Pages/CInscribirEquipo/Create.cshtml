@page
@model Frontend.Pages.CInscribirEquipo.CreateModel
@{
    ViewData["Title"]="Adicionar Equipos al Torneo";
}
<h2>Adicionar Equipos al Torneo</h2>
<h3 class="text-danger"> @ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      
                <!--Este Form-Group Tendra un DropBoxList Dinamico con un recorrido por municipios del modelo y mostrandonos solo los nombres. -->
                <div class="form-group">
                    <label asp-for="TorneoEquipo.TorneoId" class="control-label"></label>
                    <select asp-for="TorneoEquipo.TorneoId" class="form-control" >
                        <option value="">--Seleccionar Torneo--</option>
                        @foreach (var tor in Model.Torneos)
                        {<!--Por medio del for recorremos todos los municipios y traemos el nombre x cad id encontrado  -->
                            <option value="@tor.Id"> @tor.Nombre </option>
                        }                      
                        
                    </select>
                    <span asp-validation-for="TorneoEquipo.TorneoId" class="text-danger"></span>
                </div>

                @*<!--Este Form-Group Tendra un DropBoxList Dinamico con un recorrido por municipios del modelo y mostrandonos solo los nombres. -->*@
                <div class="form-group">
                    <label asp-for="TorneoEquipo.EquipoId" class="control-label"></label>
                    <select asp-for="TorneoEquipo.EquipoId" class="form-control" >
                        <option value="">--Seleccionar Equipo--</option>
                        @foreach (var equ in Model.Equipos)
                        {@*<!--Por medio del for recorremos todos los municipios y traemos el nombre x cad id encontrado  -->*@
                            <option value="@equ.Id"> @equ.Nombre </option>
                        }                      
                        
                    </select>
                    <span asp-validation-for="TorneoEquipo.EquipoId" class="text-danger"></span>
                </div> 

                <div class="form-group">
                    <input type="submit" value="Inscribir" class="btn btn-info"  />
                    <a asp-page="Index" class="btn btn-danger">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>

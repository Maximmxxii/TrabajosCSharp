@page
@model Frontend.Pages.CEntrenador.DeleteModel
@{
    ViewData["Title"]="Eliminar Entrenador";
}
<h2>Eliminar Entrenador</h2>
@if(ViewData["Error"] == null)
{
    <h3 class="text-danger" >Esta Seguro de Eliminar este Registro?</h3>
}else
{
    <h3 class="text-danger" > @ViewData["Error"]</h3>
}

<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">             

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <!--Siempre que vayamos a eliminar Un dato, Debemos traer el Id, y dejarlo de manera Hidden (Oculto) para poder usarlo. -->
                <input type="hidden" asp-for="Entrenador.Id"/>
                
                <div class="form-group">
                    <label asp-for="Entrenador.Documento" class="control-label"></label>
                    <input asp-for="Entrenador.Documento" class="form-control" readonly/>
                    <span asp-validation-for="Entrenador.Documento" class="text-danger"></span>                 
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Nombres" class="control-label"></label>
                    <input asp-for="Entrenador.Nombres" class="form-control" readonly/>
                    <span asp-validation-for="Entrenador.Nombres" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Apellidos" class="control-label">  </label>
                    <input asp-for="Entrenador.Apellidos" class="form-control" readonly/>
                    <span asp-validation-for="Entrenador.Apellidos" class="text-danger"></span>                    
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Genero" class="control-label">  </label>
                    <input asp-for="Entrenador.Genero" class="form-control" readonly/>
                    <span asp-validation-for="Entrenador.Genero" class="text-danger"></span>                  
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Celular" class="control-label">  </label>
                    <input asp-for="Entrenador.Celular" class="form-control" readonly/>
                    <span asp-validation-for="Entrenador.Celular" class="text-danger"></span>                    
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Correo" class="control-label">  </label>
                    <input asp-for="Entrenador.Correo" class="form-control" readonly/>
                    <span asp-validation-for="Entrenador.Correo" class="text-danger"></span>                    
                </div> 

                <div class="form-group">
                    <label asp-for="Entrenador.Nacionalidad" class="control-label">  </label>
                    <input asp-for="Entrenador.Nacionalidad" class="form-control" readonly/>
                    <span asp-validation-for="Entrenador.Nacionalidad" class="text-danger"></span>                    
                </div> 

                <div class="form-group">
                    <label asp-for="Entrenador.Rh" class="control-label">  </label>
                    <input asp-for="Entrenador.Rh" class="form-control" readonly/>
                    <span asp-validation-for="Entrenador.Rh" class="text-danger"></span>                    
                </div> 
                
                <div class="form-group">
                    <label asp-for="Equipo.Nombre" class="control-label">Dirige a</label>
                    <input asp-for="Equipo.Nombre" class="form-control" readonly/>
                    <span asp-validation-for="Equipo.Nombre" class="text-danger"></span>                                         
                </div>       

                <div class="form-group">
                    <input type="submit" value="Eliminar" class="btn btn-info"/>
                    <a asp-page="Index" class="btn btn-danger">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

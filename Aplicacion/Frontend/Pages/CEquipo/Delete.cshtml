@page
@model Frontend.Pages.CEquipo.DeleteModel
@{
    ViewData["Title"]="Eliminar Equipos";
}
<h2>Eliminar Equipos</h2>
@if(ViewData["Error"] == null)
{
    <h3 class="text-danger">Esta Seguro de Eliminar el registro?</h3>
}
else 
{
    <h3 class="text-danger"> @ViewData["Error"]</h3>
}


<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Equipo.Id" />

                <div class="form-group">
                    <label asp-for="Equipo.Nombre" class="control-label"></label>
                    <input asp-for="Equipo.Nombre" class="form-control" readonly/>
                    <span asp-validation-for="Equipo.Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Disciplina" class="control-label"></label>
                    <input asp-for="Equipo.Disciplina" class="form-control" readonly/>
                    <span asp-validation-for="Equipo.Disciplina" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Ciudad" class="control-label">  </label>
                    <input asp-for="Equipo.Ciudad" class="form-control" readonly/>
                    <span asp-validation-for="Equipo.Ciudad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Categoria" class="control-label">  </label>
                    <input asp-for="Equipo.Categoria" class="form-control" readonly/>
                    <span asp-validation-for="Equipo.Categoria" class="text-danger"></span>
                </div>
                
                <!--
                <div class="form-group">
                    <label asp-for="Equipo.Tecnico" class="control-label"></label>
                    <input asp-for="Equipo.Tecnico" class="form-control" readonly/>
                    <span asp-validation-for="Equipo.Tecnico" class="text-danger"></span>
                </div>   
                -->
                                
                <div class="form-group">
                    <label asp-for="Patrocinador.Nombre" class="control-label"></label>
                    <input asp-for="Patrocinador.Nombre" class="form-control" readonly/>                        
                    <span asp-validation-for="Patrocinador.Nombre" class="text-danger"></span>
                </div>       

                <div class="form-group">      
                    <input type="submit" value="Eliminar" class="btn btn-info" 
                     onclick="return confirm('Al eliminar el Equipo, eliminará el Entrenador Asociado');" />             
                    <a asp-page="Index" class="btn btn-danger">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>

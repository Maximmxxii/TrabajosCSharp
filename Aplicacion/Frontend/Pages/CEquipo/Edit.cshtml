@page
@model Frontend.Pages.CEquipo.EditModel
@{
    ViewData["Title"]="Editar Equipos";
}
<h2>Editar Equipos</h2>
<h3 class="text-danger"> @ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Equipo.Id" />
                
                <div class="form-group">
                    <label asp-for="Equipo.Nombre" class="control-label"></label>
                    <input asp-for="Equipo.Nombre" class="form-control" />
                    <span asp-validation-for="Equipo.Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Disciplina" class="control-label"></label>
                    <input asp-for="Equipo.Disciplina" class="form-control" />
                    <span asp-validation-for="Equipo.Disciplina" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Ciudad" class="control-label">  </label>
                    <input asp-for="Equipo.Ciudad" class="form-control" />
                    <span asp-validation-for="Equipo.Ciudad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Categoria" class="control-label">  </label>
                    <input asp-for="Equipo.Categoria" class="form-control" />
                    <span asp-validation-for="Equipo.Categoria" class="text-danger"></span>
                </div>
                
                <!-- 
                <div class="form-group">
                    <label asp-for="Equipo.Tecnico" class="control-label">  </label>
                    <input asp-for="Equipo.Tecnico" class="form-control" />
                    <span asp-validation-for="Equipo.Tecnico" class="text-danger"></span>
                </div>       
                -->

                <!--Este Form-Group Tendra un DropBoxList Dinamico con un recorrido por municipios del modelo y mostrandonos solo los nombres. -->
                <div class="form-group">
                    <label asp-for="Equipo.PatrocinadorId" class="control-label"></label>
                    <select asp-for="Equipo.PatrocinadorId" class="form-control" >
                        <option value="">--Seleccionar--</option>
                        @foreach (var Pat in Model.Patrocinadores)
                        {<!--Por medio del for recorremos todos los Patrocinadores y traemos el nombre x cad id encontrado  -->
                            <option value="@Pat.Id"> @Pat.Nombre </option>
                        }                      
                        
                    </select>
                    <span asp-validation-for="Equipo.PatrocinadorId" class="text-danger"></span>
                </div>       

                <div class="form-group">
                    <input type="submit" value="Actualzar" class="btn btn-info"  />
                    <a asp-page="Index" class="btn btn-danger">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>